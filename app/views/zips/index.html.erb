<p id="notice"><%= notice %></p>

<h1>Zips</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @zips.each do |zip| %>
          <tr>
            <td><%= zip.name %></td>
            <td><%= zip.description %></td>
            <td><%= link_to 'Show', zip %></td>
            <td><%= link_to 'Edit', edit_zip_path(zip) %></td>
            <td><%= link_to 'Destroy', zip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<h3>Import Zips</h3>
<%= form_tag import_zips_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Zips" %>
<% end %>

<%= link_to 'New Zip', new_zip_path %>
